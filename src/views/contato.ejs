<%- include('includes/head'); %>
<%- include('includes/navbar'); %>

  <div class="container">
    <div class="row">
      <div class="col-lg-2"></div>
      <div class="col-lg-8">
        <h1 class="text-center mt-5">Contato</h1>
        <p class="text-center lead">Crie ou edite seus contatos.</p>

        <%- include('includes/messages'); %>

        <% if (contato._id) { %>
          <form method="post" action="/contato/edit/<%= contato._id%>" class="form-valid">
        <% } else { %>
          <form method="post" action="/contato/register" class="form-valid">
        <% } %>

            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <div class="mb-3">
              <div class="form-group">
                <label for="name" class="form-label">Nome</label>
                <input type="text" value="<%= contato.name %>" class="form-control required" id="name" name="name">
                <div class="text-danger"></div>
              </div>
              <div class="form-group">
                <label for="lastname" class="form-label">Sobrenome</label>
                <input type="text"  value="<%= contato.lastname %>" class="form-control required" id="lastname" name="lastname">
                <div class="text-danger"></div>
              </div>
              <div class="form-group">
                <label for="phone" class="form-label">Telefone</label>
                <input type="text"  value="<%= contato.phone %>" class="form-control required-or" id="phone" name="phone">
                <div class="text-danger"></div>
              </div>
              <div class="form-group">
                <label for="email" class="form-label">Email</label>
                <input type="text"  value="<%= contato.email %>" class="form-control required-or email-valid" id="email" name="email">
                <div class="text-danger"></div>
              </div>
              <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Salvar</button>
              </div>
            </form>
          </div>
        <div class="col-lg-2"></div>
      </div>
    </div>
    
<%- include('includes/footer'); %>