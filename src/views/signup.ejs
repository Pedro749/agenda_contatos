<%- include('includes/head'); %>
<%- include('includes/navbar'); %>

  <div class="container">
    <div class="row">
      <div class="col-lg-2"></div>
      <div class="col-lg-8">
        <h1 class="text-center mt-5">Cadastre-se</h1>
        <p class="text-center lead">Se você ainda não tem conta, crie sua conta agora!</p>
        <div class="col-lg-8 mx-auto">
          <div class="col-lg mb-4">
            <h4>Faça seu cadastro</h4>
          </div>
        </div>
        <div class="col-lg-8 mx-auto">
          <%- include('includes/messages') %>
        </div>

        <div class="col-lg-8 mx-auto">
          <form method="post" action="/signup/register" class="form-valid">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input type="text" name="name" class="form-control required min-3 max-50" id="name">
              <div class="text-danger"></div>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email address</label>
              <input type="email" name="email" class="form-control required email-valid" id="email">
              <div class="text-danger"></div>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" name="password" class="form-control required min-3 max-50" id="password">
              <div class="text-danger"></div>
            </div>
            <button type="submit" class="btn btn-primary">Criar conta</button>
          </form>
        </div>
      </div>
    </div>
  </div>
    
<%- include('includes/footer'); %>