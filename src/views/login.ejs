<%- include('includes/head'); %>
<%- include('includes/navbar'); %>

  <div class="container">
    <div class="row">
      <div class="col-lg-2"></div>
      <div class="col-lg-8">
        <h1 class="text-center mt-5">Login</h1>
        <p class="text-center lead">Se você já tem conta, faça seu login!</p>

        <div class="col-lg-8 mx-auto">
          <div class="col-lg mb-4">
            <h4>Entre na sua conta.</h4>
          </div>
        </div>

        <div class="col-lg-8 mx-auto">
          <%- include('includes/messages') %>
        </div>
        
        <div class="col-lg-8 mx-auto">
          <form method="post" action="/login/login" class="form-valid">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <div class="mb-3">
              <label for="email" class="form-label">Email address</label>
              <input type="text" class="form-control required email-valid" id="email" name="email">
              <div class="text-danger"></div>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control required min-3 max-50" id="password" name="password">
              <div class="text-danger"></div>
            </div>
            <button type="submit" class="btn btn-primary">Entrar</button>
          </form>

          <p class="form-text mt-3">Não possui conta? <a href="/signup"> Crie sua conta</p>
        </div>
      </div>
    </div>
  </div>
    
<%- include('includes/footer'); %>